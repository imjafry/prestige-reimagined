{
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "meridian-constructions.com"
        }
      ],
      "destination": "https://www.meridian-constructions.com/:path*",
      "permanent": true
    }
  ]
}